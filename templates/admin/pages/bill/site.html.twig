{% extends 'admin/pages/bill/template.html.twig' %}

{% set page_title %}Liste des sites{% endset %}

{% block main_content %}
    <div class="main-content">
        <div class="default-page default-page-col-2">
            <div class="col-1">
                {% include "admin/layout/components/default_menu.html.twig" with { default_menu: menu_customer } %}
            </div>

            <div class="col-2">
                <div class="default-page-content">
                    <div id="sites"
                         data-donnees="{{ donnees }}"
                         data-customers="{{ customers }}"
                         data-society-id="{{ society.id }}"
                         data-counter-site="{{ society.counterSite }}"
                         data-year-site="{{ society.yearSite }}"
                    >
                        {% include "dashboard/layout/components/spinner.html.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
