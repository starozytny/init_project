{% extends 'admin/pages/bill/template.html.twig' %}

{% set page_title %}Créer un devis à partir de la facture N°{{ elem.numero }}{% endset %}

{% block main_content %}
    <div class="main-content">
        <div class="default-page">
            <div class="col-1">
                <div class="default-page-content">
                    <div id="quotation-create" class="invoice-form"
                         data-donnees="{{ donnees }}"
                         data-society="{{ society }}"
                         data-items="{{ items }}"
                         data-products="{{ products }}"
                         data-taxes="{{ taxes }}"
                         data-unities="{{ unities }}"
                         data-customers="{{ customers }}"
                         data-sites="{{ sites }}"
                         data-invoice-id="{{ elem.id }}"
                         data-invoice-ref="{{ elem.numero }}"
                    >
                        {% include "dashboard/layout/components/spinner.html.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
