{% extends 'admin/pages/bill/template.html.twig' %}

{% set page_title %}Liste des contrats{% endset %}
{% set submenuActive = "Contrats" %}

{% block main_content %}
    <div class="main-content">
        <div class="default-page default-page-col-2 default-page-contract">
            <div class="col-1">
                {% include "admin/layout/components/default_menu.html.twig" with { default_menu: menu_contracts } %}
            </div>

            <div class="col-2">
                <div class="default-page-content">
                    <div id="contracts" class="invoice-form"
                         data-donnees="{{ donnees }}"
                         data-relations="{{ relations }}"
                         data-items="{{ items }}"
                         data-products="{{ products }}"
                         data-customers="{{ customers }}"
                         data-taxes="{{ taxes }}"
                         data-unities="{{ unities }}"
                         data-sites="{{ sites }}"
                         data-society-id="{{ society.id }}"
                         data-counter-contract="{{ society.counterContract }}"
                         data-year-contract="{{ society.yearContract }}"
                    >
                        {% include "dashboard/layout/components/spinner.html.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
