        <img src="{{ elem.logo }}" class="logo" alt="Logo société">
    {% else %}
        <div class="logo"></div>
    {% endif %}
</div>
<div class="col-2">
    {% if elem.fromSiren %}
        <div><b>n° Siren/Siret : </b>{{ elem.fromSiren }}</div>
    {% endif %}
